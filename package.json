{
  "name": "wmf-viewer",
  "displayName": "WMF/EMF Viewer",
  "description": "Preview WMF and EMF images in VSCode",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/vscode-extensions/wmf-viewer.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:wmfViewer",
    "onCommand:wmfViewer.preview",
    "onFileSystem:file"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "wmfViewer",
          "name": "WMF Viewer"
        }
      ]
    },
    "commands": [
      {
        "command": "wmfViewer.preview",
        "title": "Preview WMF/EMF Image"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "wmfViewer.preview",
          "when": "resourceExtname == .wmf || resourceExtname == .emf"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "wmfViewer.editor",
        "displayName": "WMF/EMF Viewer",
        "selector": [
          {
            "filenamePattern": "*.wmf"
          },
          {
            "filenamePattern": "*.emf"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:bundle && npm run compile",
    "build:bundle": "node src/build/build-browser-bundle.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "eslint": "^8.20.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}